<%= form_with url: "/areas", method: :get, local: true do |form| %>
  <%= form.label :name, "Search" %>
  <%= form.text_field :name %>
  <%= form.submit "Search" %>
<% end %>

<% if !@areas.nil? %>
  <% @areas.each_with_index do |area, index| %>
    <div id="area_<%= index %>">
      <%= area.name %>
      <br>
      <%= area.state %>
      <br>
      <%= button_to "Create a Trip for this Area", "/areas/#{area.id}/trips/new", method: :get %>
      <hr>
    </div>
  <% end %>
<% end %>
