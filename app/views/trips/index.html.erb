<% if @error %>
  <div class="error_container">
    <h1><%= @error.message %></h1>
    <h4>Status: <%= @error.status %></h4>
    <h4>Code: <%= @error.code %></h4>
  </div>
<% else %>
  <div class="container" style="">
    <div class="mt-5">
      <% @trips.each do |trip| %>
        <div id="trip-<%= trip.id %>">
          <div class="d-style btn btn-brc-tp border-2 bgc-white btn-outline-blue btn-h-outline-blue btn-a-outline-blue w-100 my-2 py-3 shadow-sm">
            <div class="row align-items-center">
              <div class="col-12 col-md-4">
                <h4 class="pt-3 text-170 text-600 text-primary-d1 letter-spacing">
                  <%= trip.name %>
                </h4>
              </div>
              <div class="list-unstyled mb-0 col-12 col-md-4 text-dark-l1 text-90 text-left my-4 my-md-0">
                <%= trip.start_date %> to <%= trip.end_date %>
              </div>
              <div class="col-12 col-md-4 text-center">
                <a href="/trips/<%= trip.id %>" class="f-n-hover btn btn-info btn-raised px-4 py-25 w-75 text-600">View Trip</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
