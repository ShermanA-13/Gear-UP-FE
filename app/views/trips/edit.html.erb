<h1>Edit <%= @trip.name %></h1>

<%= form_with url: "/trips/#{@trip.id}", method: :patch, local: true do |f| %>
  <%= f.label "Trip name" %>
  <%= f.text_field :name, :value => @trip.name %>
  <br><br>
  <%= f.label :start_date %>
  <%= f.date_field :start_date, :value => @trip.start_date %>
  <br><br>
  <%= f.label :end_date %>
  <%= f.date_field :end_date, :value => @trip.end_date %>
  <br><br>
  <%= f.label :description %>
  <%= f.text_field :description, :value => @trip.description %>
  <br><br>
  <%= f.submit "Update Trip" %>
<% end %>
